@page
@model ExploreRoskilde.RegisterModel
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "CreatePizza";

    string erMessage = HttpContext.Session.GetString("erMessage");

    if (erMessage == null)
        erMessage = "";
}


<section class="vh-80 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">

                            <h2 class="fw-bold mb-2 text-uppercase">Register</h2>
                            <p class="text-white-50 mb-5">Please enter your informations.</p>

                            <form method="post"> 
                                <div class="form-outline form-white mb-4 text-lg-left">
                                    <label asp-for="@Model.User.Email">User email</label>
                                    <input class="form-control form-control-lg" id="typeEmailX" type="email" asp-for="@Model.User.Email"/>
                                    <span asp-validation-for="@Model.User.Email" class="text-danger"></span>
                                </div>

                                <div class="form-outline form-white mb-4 text-lg-left">
                                    <label asp-for="@Model.User.Username">User name</label>
                                    <input class="form-control form-control-lg" asp-for="@Model.User.Username"/>
                                    <span asp-validation-for="@Model.User.Username" class="text-danger"></span>
                                </div>
                                
                                <div class="form-outline form-white mb-4 text-lg-left">
                                    <label asp-for="@Model.Password1">Password</label>
                                    <input class="form-control form-control-lg" type="password" asp-for="@Model.Password1"/>
                                    <span asp-validation-for="@Model.Password1" class="text-danger"></span>
                                </div>
                                
                                <div class="form-outline form-white mb-4 text-lg-left">
                                    <label asp-for="@Model.Password2">Confirm password</label>
                                    <input class="form-control form-control-lg" type="password" asp-for="@Model.Password2"/>
                                    <span asp-validation-for="@Model.Password2" class="text-danger"></span>
                                </div>
                                
                                <span>@erMessage&nbsp</span>
                                
                                <div class="row">
                                    <div class="col mt-3 text-center">
                                        <input type="submit" value="Sign Up" class="btn btn-outline-light btn-lg px-5"/>
                                    </div>
                                </div>
                            </form>
                        </div>

                        <div>
                            <p class="mb-0">Already have an account? <a asp-page="/Authentication/Login" class="text-white-50 fw-bold">Log in</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
