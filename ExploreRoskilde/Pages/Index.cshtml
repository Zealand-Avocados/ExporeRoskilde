@page
@using ExploreRoskilde.Models
@model IndexModel
@{
    ViewData["Title"] = "Explore Roskilde";
}
<div class="text-center">
    <h1 class="display-4">Explore Roskilde</h1>
    <p>Explore Roskilde and its are with international students</p>

</div>


@foreach (Place place in Model.AllPlaces.Values)
{
    <div class="card my-2">
        <h5 class="card-header">@place.Category - ID: @place.Id</h5>
        <div class="card-body">
            <h5 class="card-title">@place.Title</h5>
            <p class="card-text">@place.Description</p>
            <p class="card-text">@place.Address</p>
            <a class="btn btn-primary" asp-page="Places/DetailsPage" asp-route-id="@place.Id">More info</a>
            <a href="#" class="btn btn-info">Update</a>
            <a href="#" class="btn btn-danger">Delete</a>
        </div>
    </div>
}

<div class="row">
    

@foreach (Place place in Model.AllPlaces.Values)
{
    <div class="card mb-3 col-sm-6 col-12 p-0">
        @{
            if (!string.IsNullOrEmpty(place.ImageUrl))
            {
                <img src="@place.ImageUrl" class="card-img-top" alt="place image">
                
            }

        }
        <div class="card-body">
            <h5 class="card-title">@place.Title</h5>
            <p class="card-text">@place.Description</p>
            <p class="card-text">
                <small class="text-muted">@place.Address</small>
            </p>
            <a class="btn btn-primary card-text" asp-page="Places/DetailsPage" asp-route-id="@place.Id">More info</a>
            <a href="#" class="btn btn-info card-text">Update</a>
            <a href="#" class="btn btn-danger card-text">Delete</a>
        </div>
    </div>
}
</div>